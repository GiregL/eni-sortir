{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<main class="container" id="maincontent">
    <div class="row">
        {% include "partials/_flash.html.twig" %}
        <h2 class="col-xs-12 col-md-8 col-md-offset-2">S'enregistrer</h2>

        {{ form_start(registrationForm, {'attr': {'class': 'col-xs-12 col-md-8 col-md-offset-2'}}) }}
            <div class="row">      
                {{ form_label(registrationForm.username)}}
                {{ form_widget(registrationForm.username, {'attr': {'class': 'col-xs-8'}}) }}
            </div>

            <div class="row">
                {{ form_label(registrationForm.email) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'col-xs-8'}}) }}
            </div>

            <div class="row">
                {{ form_label(registrationForm.plainPassword) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'col-xs-8'}}) }}
            </div>

            <div class="row">
                {{ form_label(registrationForm.city) }}
                {{ form_widget(registrationForm.city, {'attr': {'class': 'col-xs-8'}}) }}
            </div>

            <button type="submit" class="btn">S'enregistrer</button>
        {{ form_end(registrationForm) }}
    </div>
</main>
<footer>

</footer>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}ENI Sortir - Liste des utilisateurs{% endblock %}

{% block body %}

    <div class="container">
        <h1> Liste des utilisateurs </h1>

        <table>
            <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Email</th>
                    <th scope="col">Rôles</th>
                    <th scope="col">Username</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in listeUsers %}
                <tr>
                    <td>{{ user.name }}</td>
                    <td>{{ user.mail }}</td>
                    <td> 
                    {% for roles in user.user.roles %}
                        {{ roles }}
                    {% endfor %}
                    </td>
                    <td>{{ user.user.username }}</td>
                    <td>
                    <a href="{{ path('app_user_add',{id:user.id}) }}" role="button">Désactiver</a>
                    <a href="{{ path('app_user_remove',{id:user.id}) }}" role="button">Supprimer</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        
        <div>
            <a href="{{ path('app_user_add') }}" role="button">Ajouter un utilisateur</a>
            <a href="{{ path('app_user_addall_get') }}" role="button">Ajouter des utilisateurs via un fichier</a>
        </div>
    </div>
{% endblock %}
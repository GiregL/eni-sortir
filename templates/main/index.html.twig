{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}

<main class="container" id="maincontent">
    {% include "partials/_flash.html.twig" %}
    {{ include('main/_form.html.twig') }}

    <table>
        <thead>
            <tr>
                <th scope="col">Nom de la sortie</th>
                <th scope="col">Date de la sortie</th>
                <th scope="col">Clôture</th>
                <th scope="col">Etat</th>
                <th scope="col">Inscrit/Places</th>
                <th scope="col">Organisateur</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for event in event_list %}
            <tr>
                <td>{{ event.name }}</td>
                <td>{{ event.startDate | date('m/d/Y') }}</td>
                <td>{{ event.dateLimitRegister|date('m/d/Y') }}</td>
                <td>{{ event.state.identifier }}</td>
                <td>{{ event.members|length }} / {{ event.maxRegister }}</td>
                <td><a href="{{ path('app_profile_detail_id',{id:event.organizer.id}) }}">{{ event.organizer.name }}</a></td>
                <td><a href="{{ path('app_event_detail',{id:event.id}) }}">Afficher </a> 
                    {% if app.user %}
                        {% if isUserRegisteredOnEvent(event, app.user.profil) %}
                            <a href='{{ path('app_event_inscription',{id:event.id}) }}'>S'incrire </a>
                        {% else %}
                            <a href="{{ path('app_event_unsub', {id:event.id}) }}">Se désister </a> 
                        {% endif %}
                        {% if not isPublish(event) %}
                            <a href='{{ path('app_event_publish',{id:event.id}) }}'>Publier </a>
                        {% endif %}
                        {% if app.user and isUserOrganizerOfEvent(app.user, event) %}
                            <a href='{{ path('app_event_cancel_show',{id:event.id}) }}'>Annuler </a>
                            <a href='{{ path('app_event_update',{id:event.id}) }}'>Modifier </a>
                        {% endif %}
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_event_new')}}" role="button">Créer une sortie</a>
</main>
<footer>

</footer>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<main class="content-container" id="maincontent">
    <div class="centered-form">
        <h1>Se connecter</h1>
        
        <div>
            {% include "partials/_flash.html.twig" %}
        </div>

        <form method="post">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            
            <div class="stack">
                <div class="field_type">
                    <label for="inputEmail">Identifiant : </label>
                    <input type="text" value="{{ last_username }}" name="emailUsername" id="inputEmailUsername"required>
                </div>
                
                <div class="field_type">
                    <label for="inputPassword">Mot de passe : </label>
                    <input type="password" name="password" id="inputPassword"autocomplete="current-password" required>
                </div>
                
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                
                <label for="_remember_me"><input type="checkbox" name="_remember_me" id="_remember_me"> Se souvenir de moi</label> 
                
                <div>
                    <button type="submit">Se connecter</button>
                </div>
            </div>
        </form>
    </div>
</main>
{% endblock %}